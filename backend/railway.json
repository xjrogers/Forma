{
  "$schema": "https://docs.railway.app/schemas/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheckPath": "/health",
    "restartPolicy": {
      "maxRetries": 10
    },
    "startCommand": "npm run start"
  }
} 